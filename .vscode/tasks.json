{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc générer le fichier actif",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++17",
                "-g",
                "-Wall",
                "-Wextra",
                "${workspaceFolder}/src/interpreter/system_functions/*.cpp",
                "${workspaceFolder}/src/interpreter/*.cpp",
                "${workspaceFolder}/src/parser/*.cpp",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${workspaceFolder}/interpreter",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tâche générée par le débogueur."
        }
    ],
    "version": "2.0.0"
}