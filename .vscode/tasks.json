{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc générer le fichier actif",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-Wall",
                "-Wextra",
                "${fileDirname}/main.cpp",
                "${fileDirname}/parser/expression/Expression.cpp",
                "${fileDirname}/parser/Standard.cpp",
                "${fileDirname}/interpreter/Context.cpp",
                "${fileDirname}/interpreter/Function.cpp",
                "${fileDirname}/interpreter/Interpreter.cpp",
                "${fileDirname}/interpreter/Object.cpp",
                "${fileDirname}/interpreter/Reference.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tâche générée par le débogueur."
        }
    ],
    "version": "2.0.0"
}